generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int          @id @default(autoincrement())
  nombre       String
  email        String       @unique
  passwordHash String
  rol          String       @db.VarChar(50)
  activo       Boolean      @default(true)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  logs         LogSistema[] @relation("UsuarioLog")
  respaldos    Respaldo[]   @relation("UsuarioRespaldo")
}

model Paciente {
  id        Int        @id @default(autoincrement())
  rut       String?    @unique
  nombre    String?
  edad      Int?
  sexo      String?    @db.VarChar(10)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  episodios Episodio[]
}

model Grd {
  id              Int        @id @default(autoincrement())
  codigo          String     @unique
  descripcion     String?
  peso            Decimal?   @db.Decimal(10, 4)
  precioBaseTramo Decimal?   @db.Decimal(14, 2)
  puntoCorteInf   Decimal?
  puntoCorteSup   Decimal?
  createdAt       DateTime   @default(now())
  episodios       Episodio[]
}

model Episodio {
  id                  Int                   @id @default(autoincrement())
  centro              String?
  numeroFolio         String?               @db.VarChar(100)
  episodioCmdb        String?               @db.VarChar(100)
  idDerivacion        String?               @db.VarChar(100)
  tipoEpisodio        String?
  fechaIngreso        DateTime?
  fechaAlta           DateTime?
  servicioAlta        String?
  estadoRn            String?
  atSn                Boolean?
  atDetalle           String?
  montoAt             Decimal?              @db.Decimal(14, 2)
  tipoAlta            String?
  pesoGrd             Decimal?              @db.Decimal(10, 4)
  montoRn             Decimal?              @db.Decimal(14, 2)
  diasDemoraRescate   Int?
  pagoDemoraRescate   Decimal?              @db.Decimal(14, 2)
  pagoOutlierSuperior Decimal?              @db.Decimal(14, 2)
  documentacion       Json?
  inlierOutlier       String?
  grupoEnNorma        Boolean?
  diasEstada          Int?
  precioBaseTramo     Decimal?              @db.Decimal(14, 2)
  valorGrd            Decimal?              @db.Decimal(14, 2)
  montoFinal          Decimal?              @db.Decimal(16, 2)
  facturacionTotal    Decimal?              @db.Decimal(16, 2)
  especialidad        String?
  anio                Int?
  mes                 Int?
  pacienteId          Int?
  grdId               Int?
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  convenio            String?               @db.VarChar(100)
  validado            Boolean?
  diagnosticos        Diagnostico[]
  documentos          DocumentoCloudinary[]
  grd                 Grd?                  @relation(fields: [grdId], references: [id])
  paciente            Paciente?             @relation(fields: [pacienteId], references: [id])
  respaldos           Respaldo[]

  @@index([numeroFolio])
  @@index([episodioCmdb])
  @@index([pacienteId])
  @@index([fechaIngreso])
}

model PrecioConvenio {
  id             String    @id @default(uuid())
  aseguradora    String?   @default("")
  nombre_asegi   String?   @default("")
  convenio       String?   @default("")
  descr_convenio String?   @default("")
  tipoAsegurad   String?   @default("")
  tipoConvenio   String?   @default("")
  tramo          String?
  fechaAdmision  DateTime?
  fechaFin       DateTime?
  precio         Float?    @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model AjusteTecnologia {
  id        String   @id @default(uuid())
  at        String?  @default("")
  monto     Float?   @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Diagnostico {
  id          Int       @id @default(autoincrement())
  codigo      String?   @db.VarChar(50)
  descripcion String?
  esPrincipal Boolean?  @default(false)
  episodioId  Int?
  createdAt   DateTime  @default(now())
  episodio    Episodio? @relation(fields: [episodioId], references: [id])
}

model Respaldo {
  id          Int       @id @default(autoincrement())
  filename    String?
  storagePath String?
  fileType    String?
  sizeBytes   Int?
  uploadedAt  DateTime  @default(now())
  episodioId  Int?
  uploadedBy  Int?
  episodio    Episodio? @relation(fields: [episodioId], references: [id])
  usuario     Usuario?  @relation("UsuarioRespaldo", fields: [uploadedBy], references: [id])
}

model LogSistema {
  id        Int      @id @default(autoincrement())
  endpoint  String?
  action    String?
  level     String?
  message   String?
  metadata  Json?
  createdAt DateTime @default(now())
  userId    Int?
  usuario   Usuario? @relation("UsuarioLog", fields: [userId], references: [id])

  @@index([userId])
}

model DocumentoCloudinary {
  id         Int      @id @default(autoincrement())
  nombre     String
  publicId   String   @unique
  url        String
  formato    String?
  tamano     Int?
  uploadedAt DateTime @default(now())
  episodioId Int
  episodio   Episodio @relation(fields: [episodioId], references: [id], onDelete: Cascade)

  @@index([episodioId])
}

model ConfiguracionSistema {
  id          Int      @id @default(autoincrement())
  clave       String   @unique
  valor       String
  descripcion String?
  tipo        String?  @default("string")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([clave])
}
